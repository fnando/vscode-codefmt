{
  "name": "codefmt",
  "displayName": "codefmt",
  "description": "A plugin that allows applying code formatting with minimum configuration.",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/fnando/vscode-codefmt"
  },
  "publisher": "fnando",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codefmt.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codefmt.run",
        "title": "Run Codefmt"
      }
    ],
    "configuration": {
      "title": "Codefmt",
      "type": "object",
      "properties": {
        "codefmt.enableOnSave": {
          "type": "boolean",
          "description": "Run Codefmt on Save",
          "default": true
        },
        "codefmt.debug": {
          "type": "boolean",
          "description": "When debug mode is enabled, commands will be executed with additional debugging flags",
          "default": false
        }
      }
    },
    "configurationDefaults": {}
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "prettier": "*"
  }
}
