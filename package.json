{
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codefmt.run"
  ],
  "categories": [
    "Formatters"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codefmt.run",
        "title": "Run Codefmt"
      }
    ],
    "configuration": {
      "properties": {
        "codefmt.debug": {
          "default": false,
          "description": "When debug mode is enabled, commands will be executed with additional debugging flags",
          "type": "boolean"
        },
        "codefmt.enableOnSave": {
          "default": true,
          "description": "Run Codefmt on Save",
          "type": "boolean"
        },
        "codefmt.formatters": {
          "default": {
            "autopep8": {
              "command": [
                "autopep8",
                "$debug",
                "--in-place",
                "--aggressive",
                "--global-config",
                "$config",
                "$file"
              ],
              "configFiles": [
                ".pycodestyle",
                "setup.cfg",
                "tox.ini",
                ".pep8",
                ".flake8"
              ],
              "debug": [
                "--verbose"
              ],
              "languages": [
                "python"
              ],
              "useStdout": false
            },
            "dartfmt": {
              "command": [
                "dartfmt",
                "--fix",
                "--line-length",
                "80",
                "--overwrite",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "dart"
              ],
              "useStdout": false
            },
            "eslint": {
              "command": [
                "eslint",
                "$debug",
                "--fix",
                "--config",
                "$config",
                "$file"
              ],
              "configFiles": [
                ".eslintrc.js",
                ".eslintrc.cjs",
                ".eslintrc.yaml",
                ".eslintrc.yml",
                ".eslintrc.json",
                ".eslintrc"
              ],
              "debug": [
                "--debug"
              ],
              "languages": [
                "javascript",
                "jsx",
                "typescript",
                "typescriptreact"
              ],
              "useStdout": false
            },
            "flutter": {
              "command": [
                "flutter",
                "format",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "dart"
              ],
              "useStdout": false
            },
            "gofmt": {
              "command": [
                "gofmt",
                "-w",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "go"
              ],
              "useStdout": false
            },
            "gofumpt": {
              "command": [
                "gofumpt",
                "-w",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "go"
              ],
              "useStdout": false
            },
            "goimports": {
              "command": [
                "goimports",
                "-w",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "go"
              ],
              "useStdout": false
            },
            "jq": {
              "command": [
                "jq",
                "--sort-keys",
                ".",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "json"
              ],
              "useStdout": true
            },
            "pg_format": {
              "command": [
                "pg_format",
                "--inplace",
                "--config",
                "$config",
                "$file"
              ],
              "configFiles": [
                ".pg_format",
                "pg_format.conf"
              ],
              "debug": [],
              "languages": [
                "postgres"
              ],
              "useStdout": false
            },
            "php-cs-fixer": {
              "command": [
                "php-cs-fixer",
                "fix",
                "$debug",
                "--using-cache",
                "no",
                "--config",
                "$config",
                "$file"
              ],
              "configFiles": [
                ".php_cs"
              ],
              "debug": [
                "-vvv"
              ],
              "languages": [
                "php"
              ],
              "useStdout": false
            },
            "prettier": {
              "command": [
                "prettier",
                "$debug",
                "--write",
                "--config",
                "$config",
                "$file"
              ],
              "configFiles": [
                ".prettierrc",
                ".prettierrc.json",
                ".prettierrc.yml",
                ".prettierrc.yaml",
                ".prettierrc.json5",
                ".prettierrc.js",
                ".prettierrc.cjs",
                "prettier.config.js",
                "prettier.config.cjs",
                ".prettierrc.toml"
              ],
              "debug": [
                "--loglevel",
                "debug"
              ],
              "languages": [
                "css",
                "javascript",
                "json",
                "jsonc",
                "jsx",
                "postcss",
                "scss",
                "typescript",
                "typescriptreact",
                "yaml",
                "markdown"
              ],
              "useStdout": false
            },
            "rubocop": {
              "command": [
                "rubocop",
                "$debug",
                "--auto-correct-all",
                "--config",
                "$config",
                "$file"
              ],
              "configFiles": [
                ".rubocop.yml"
              ],
              "debug": [
                "--debug",
                "--extra-details"
              ],
              "languages": [
                "ruby"
              ],
              "useStdout": false
            },
            "rubyfmt": {
              "command": [
                "rubyfmt",
                "-i",
                "$file"
              ],
              "configFiles": [],
              "debug": [],
              "languages": [
                "ruby"
              ],
              "useStdout": false
            },
            "rustfmt": {
              "command": [
                "rustfmt",
                "$debug",
                "--emit",
                "files",
                "--config-path",
                "$config",
                "$file"
              ],
              "configFiles": [
                "rustfmt.toml",
                ".rustfmt.toml"
              ],
              "debug": [
                "--verbose"
              ],
              "languages": [
                "rust"
              ],
              "useStdout": false
            },
            "svgo": {
              "command": [
                "svgo",
                "--config",
                "$config",
                "--multipass",
                "--pretty",
                "--input",
                "$file",
                "--output",
                "$file"
              ],
              "configFiles": [
                ".svgo.yml",
                ".svgo.json",
                "svgo.config.json",
                ".svgo.config.json",
                ".svgorc.json",
                ".svgorc.yml"
              ],
              "debug": [],
              "languages": [
                "text.xml.svg"
              ],
              "useStdout": false
            },
            "swiftformat": {
              "command": [
                "swiftformat",
                "$file",
                "--output",
                "$file",
                "--config",
                "$config",
                "$debug"
              ],
              "configFiles": [
                ".swiftformat"
              ],
              "debug": [
                "--verbose"
              ],
              "languages": [
                "swift"
              ],
              "useStdout": false
            },
            "yapf": {
              "command": [
                "yapf",
                "$debug",
                "--in-place",
                "$file"
              ],
              "configFiles": [],
              "debug": [
                "--verbose"
              ],
              "languages": [
                "python"
              ],
              "useStdout": false
            }
          },
          "description": "The commands that will be used to format code.",
          "type": "object"
        },
        "codefmt.preferredFormatters": {
          "default": [
            "gofumpt",
            "rubocop",
            "jq",
            "prettier",
            "eslint",
            "php-cs-fixer",
            "rustfmt",
            "svgo",
            "swiftformat",
            "flutter",
            "pg_format",
            "yapf"
          ],
          "description": "List of enabled formatters",
          "type": "array"
        }
      },
      "title": "Codefmt",
      "type": "object"
    },
    "configurationDefaults": {}
  },
  "description": "A plugin that allows applying code formatting with minimum configuration.",
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "prettier": "*",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "displayName": "codefmt",
  "engines": {
    "vscode": "^1.57.0"
  },
  "icon": "icon.png",
  "license": "MIT",
  "main": "./out/extension.js",
  "name": "codefmt",
  "publisher": "fnando",
  "repository": {
    "url": "https://github.com/fnando/vscode-codefmt"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "yarn run compile",
    "watch": "tsc -watch -p ./"
  },
  "version": "0.0.8"
}
